# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://axlguestlistwebsite-production-5c19.up.railway.app

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Email Configuration
EMAIL_PROVIDER=gmail
# Options: gmail, sendgrid, smtp

# For Gmail (recommended for development)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-app-password
EMAIL_FROM=SRIC Access Portal <your-email@gmail.com>

# For SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# For Generic SMTP
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password

# Gmail API Configuration (for email processing)
GMAIL_CLIENT_ID=your_client_id_here
GMAIL_CLIENT_SECRET=your_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:3001/oauth/callback
GMAIL_REFRESH_TOKEN=will_be_generated_during_setup
GMAIL_ACCESS_TOKEN=will_be_generated_during_setup

# API Configuration
API_ENDPOINT=http://localhost:3001/api/process-email

# Gemini AI Configuration (for email processing)
GEMINI_API_KEY=your_gemini_api_key_here 